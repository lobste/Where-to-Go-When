---
import Logo from './Logo.astro';
import MonthsNav from './MonthsNav.astro';
---

<header class="sticky top-0 z-50 w-full bg-gradient-to-r from-gray-50 to-gray-100 shadow-sm">
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col">
      <!-- Top bar with logo and CTA -->
      <div class="flex items-center justify-between px-4 py-4">
        <Logo />
        
        <a
          href="/destinations"
          class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-300"
        >
          Explore Now
        </a>
      </div>

      <!-- Months navigation -->
      <div class="border-t border-gray-200">
        <div class="py-2">
          <MonthsNav />
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  header {
    backdrop-filter: blur(8px);
    background: linear-gradient(to right, rgba(248, 249, 250, 0.95), rgba(233, 236, 239, 0.95));
  }
</style>