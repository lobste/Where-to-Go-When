---
const months = [
  { name: 'January', icon: '❄️', tagline: 'Escape to Thailand' },
  { name: 'February', icon: '💝', tagline: 'Carnival in Brazil' },
  { name: 'March', icon: '🍀', tagline: 'St. Patrick\'s in Ireland' },
  { name: 'April', icon: '🌷', tagline: 'Tulips in Netherlands' },
  { name: 'May', icon: '🌺', tagline: 'Spring in Italy' },
  { name: 'June', icon: '☀️', tagline: 'Summer in France' },
  { name: 'July', icon: '🏖️', tagline: 'Beach time in Croatia' },
  { name: 'August', icon: '🎭', tagline: 'Festivals in Scotland' },
  { name: 'September', icon: '🍺', tagline: 'Oktoberfest in Germany' },
  { name: 'October', icon: '🍁', tagline: 'Fall colors in Japan' },
  { name: 'November', icon: '✨', tagline: 'Diwali in India' },
  { name: 'December', icon: '🎄', tagline: 'Winter in Switzerland' }
];
---

<section class="bg-white rounded-lg shadow-lg p-6 mb-12">
  <h2 class="font-playfair text-2xl mb-6">Travel Timeline</h2>
  
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
    {months.map(month => (
      <a
        href={`/destinations/${month.name.toLowerCase()}`}
        class="group bg-gray-50 rounded-lg p-4 hover:bg-blue-50 transition"
      >
        <div class="text-center">
          <span class="text-2xl mb-2 block">{month.icon}</span>
          <h3 class="font-medium text-gray-900 mb-1">{month.name}</h3>
          <p class="text-sm text-gray-500 group-hover:text-blue-600 transition">
            {month.tagline}
          </p>
        </div>
      </a>
    ))}
  </div>
</section>