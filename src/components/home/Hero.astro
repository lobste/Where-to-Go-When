---
import SearchBar from './SearchBar.astro';
---

<section class="relative h-[80vh] flex items-center justify-center">
  <div class="absolute inset-0 overflow-hidden">
    <img 
      src="/images/hero-bg.jpg" 
      alt="Beautiful travel destination" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/50"></div>
  </div>
  
  <div class="relative z-10 text-center text-white max-w-4xl mx-auto px-4">
    <h1 class="font-playfair text-5xl md:text-7xl mb-6">
      Where to Go This Month?
    </h1>
    <p class="text-xl md:text-2xl mb-8 font-light">
      Discover your perfect destination based on when you want to travel
    </p>
    <SearchBar />
  </div>
</section>