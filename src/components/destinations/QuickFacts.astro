---
interface Props {
  weather: string;
  events: string[];
}

const { weather, events } = Astro.props;
---

<div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
  <h2 class="font-playfair text-2xl mb-4">Quick Facts</h2>
  
  <div class="space-y-4">
    <div>
      <h3 class="font-semibold text-gray-800 mb-2">Weather</h3>
      <p class="text-gray-600">{weather}</p>
    </div>
    
    <div>
      <h3 class="font-semibold text-gray-800 mb-2">Key Events</h3>
      <ul class="space-y-2">
        {events.map(event => (
          <li class="flex items-start">
            <span class="text-blue-500 mr-2">â€¢</span>
            <span class="text-gray-600">{event}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</div>