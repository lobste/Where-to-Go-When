---
interface Recommendation {
  name: string;
  title: string;
  content: string;
  photo: string;
  likes: number;
}

interface Props {
  recommendations: Recommendation[];
}

const { recommendations } = Astro.props;
---

<section class="bg-white rounded-lg shadow-lg p-6">
  <h2 class="font-playfair text-2xl mb-6 flex items-center">
    <span class="inline-block w-8 h-8 mr-3">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
      </svg>
    </span>
    Traveler Recommendations
  </h2>

  <div class="grid md:grid-cols-2 gap-6">
    {recommendations.map(rec => (
      <article class="bg-gray-50 rounded-lg p-4">
        <div class="flex items-start space-x-4">
          <img
            src={rec.photo}
            alt={`Photo by ${rec.name}`}
            class="w-16 h-16 rounded-full object-cover"
          />
          <div>
            <h3 class="font-semibold text-lg">{rec.title}</h3>
            <p class="text-sm text-gray-500 mb-2">By {rec.name}</p>
            <p class="text-gray-600 mb-3 line-clamp-3">{rec.content}</p>
            
            <div class="flex items-center justify-between">
              <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                Read More
              </button>
              <div class="flex items-center space-x-2">
                <button class="text-gray-500 hover:text-blue-600">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
                  </svg>
                </button>
                <span class="text-sm text-gray-500">{rec.likes}</span>
              </div>
            </div>
          </div>
        </div>
      </article>
    ))}
  </div>
</section>