---
import Layout from '../../layouts/Layout.astro';
import { getMonthName } from '../../utils/dateUtils';

const months = [
  'January', 'February', 'March', 'April', 'May', 'June',
  'July', 'August', 'September', 'October', 'November', 'December'
];

const currentMonth = getMonthName(new Date());
---

<Layout title="Destinations - Where to Go When">
  <main class="max-w-7xl mx-auto px-4 py-16">
    <h1 class="font-playfair text-5xl text-center mb-12">
      Explore Destinations by Month
    </h1>
    
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {months.map(month => (
        <a
          href={`/destinations/${month.toLowerCase()}`}
          class:list={[
            'group p-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-300',
            month.toLowerCase() === currentMonth 
              ? 'bg-blue-50 border-2 border-blue-200'
              : 'bg-white'
          ]}
        >
          <h2 class="text-2xl font-playfair mb-2 group-hover:text-blue-600 transition-colors">
            {month}
          </h2>
          <p class="text-gray-600">
            Discover the perfect destinations for your {month} travels.
          </p>
        </a>
      ))}
    </div>
  </main>
</Layout>